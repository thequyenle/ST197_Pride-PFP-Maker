<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imvImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/tvContent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="fitXY"
        android:src="@drawable/img_intro_1" />

    <com.pfp.pride.core.custom.text.DoubleStrokeTextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="78sp"
        android:maxLines="2"
        android:layout_marginHorizontal="16dp"
        android:fontFamily="@font/lobster14"
        android:gravity="center"
        app:outerStrokeColor="@color/app"
        app:outerStrokeWidth="4dp"
        tools:text="@string/title_22"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>