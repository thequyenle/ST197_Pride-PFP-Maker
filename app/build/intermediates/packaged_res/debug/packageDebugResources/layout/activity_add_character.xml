<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    android:clipChildren="false"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:descendantFocusability="beforeDescendants"
    tools:context=".ui.add_character.AddCharacterActivity">

    <!--    flGetText-->
    <FrameLayout
        android:id="@+id/flGetText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:paddingHorizontal="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--        tvGetText-->
        <TextView
            android:id="@+id/tvGetText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:clickable="false"
            android:focusable="false"
            android:gravity="center"
            android:maxLength="30"
            android:text=""
            android:textColor="@color/black"
            android:textSize="40sp" />
    </FrameLayout>




    <!--    flActionBar-->
    <FrameLayout
        android:id="@+id/flActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/actionBar"
            layout="@layout/layout_actionbar" />
    </FrameLayout>

    <!--    flSave-->
    <FrameLayout
        android:id="@+id/flSave"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flActionBar">

        <!--        imvBackground-->
        <ImageView
            android:id="@+id/imvBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
        <!--        drawView-->
        <com.pfp.pride.core.custom.drawview.DrawView
            android:id="@+id/drawView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>







    <!--    flFunction-->
    <FrameLayout
        android:id="@+id/flFunction"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toTopOf="@id/lnlBottom"
        app:layout_constraintTop_toBottomOf="@id/flSave"
        >

        <ImageView
            android:id="@+id/bg_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_bg"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            />

        <ImageView
            android:id="@+id/bg_other"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_bg"
            android:layout_marginTop="0dp"
            android:visibility="gone"
            android:layout_marginBottom="20dp"
            />


        <LinearLayout
            android:id="@+id/sectionTab"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginHorizontal="70dp"
            android:layout_marginTop="0dp"
            android:background="@color/transparent"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible"
            >

            <!--                btnBackgroundImage-->
            <FrameLayout
                android:id="@+id/btnBackgroundImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <!--                imvBgImage (nền)-->
                <ImageView
                    android:id="@+id/imvBgImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/subTabImage"
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="@drawable/un_selected_tab_sub"
                    android:visibility="gone" />

                <!--                imvFocusImage (nền khi chọn)-->
                <ImageView
                    android:id="@+id/imvFocusImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/selected_tab"
                    android:visibility="visible" />

                <!--                tvBackgroundImage-->
                <TextView
                    android:id="@+id/tvBackgroundImage"
                    style="@style/single_marquee"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/lobster14"
                    android:gravity="center"
                    android:text="@string/image"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </FrameLayout>

            <Space
                android:layout_width="17dp"
                android:layout_height="match_parent"
                />
            <!--                btnBackgroundColor-->
            <FrameLayout
                android:id="@+id/btnBackgroundColor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_weight="1">

                <!--                imvBgColor (nền)-->
                <ImageView
                    android:id="@+id/imvBgColor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/subTabColor"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:background="@drawable/un_selected_tab_sub"
                    android:visibility="gone" />

                <!--                imvFocusColor (nền xanh khi chọn)-->
                <ImageView
                    android:id="@+id/imvFocusColor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:scaleX="1"
                    android:src="@drawable/un_selected_tab"
                    android:visibility="gone"
                    tools:visibility="visible"
                    />

                <!--                tvBackgroundColor-->
                <TextView
                    android:id="@+id/tvBackgroundColor"
                    style="@style/single_marquee"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/lobster14"
                    android:gravity="center"
                    android:text="@string/color"
                    android:textColor="#AB5BFF"
                    android:textSize="14sp" />

            </FrameLayout>
        </LinearLayout>

        <!--        lnlBackground-->
        <LinearLayout
            android:id="@+id/lnlBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="55dp"
            android:orientation="vertical"
            android:layout_marginBottom="25dp"
            android:visibility="gone"
            tools:visibility="visible"
            >


            <!--            rcvBackgroundImage-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvBackgroundImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4.5dp"
                android:paddingHorizontal="7.5dp"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="5"
                tools:itemCount="10"
                tools:visibility="gone"
                tools:listitem="@layout/item_background_image" />

            <!--            rcvBackgroundColor-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvBackgroundColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4.5dp"
                android:paddingHorizontal="7.5dp"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="5"
                tools:itemCount="10"
                tools:visibility="visible"
                tools:listitem="@layout/item_background_color" />
        </LinearLayout>

        <!--        lnlSticker-->
        <LinearLayout
            android:id="@+id/lnlSticker"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:visibility="gone"
            android:visibility="gone">
            <!-- Title: Sticker -->
            <TextView
                android:id="@+id/tvTitleSticker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sticker"
                android:gravity="center"
                android:textColor="#AB5BFF"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/lobster14"
                android:textSize="20sp" />

            <!--            rcvSticker-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvSticker"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:paddingHorizontal="7.5dp"
                android:layout_marginBottom="22dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="5"
                tools:listitem="@layout/item_sticker" />
        </LinearLayout>

        <!--        lnlSpeech-->
        <LinearLayout
            android:id="@+id/lnlSpeech"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:visibility="gone"
            android:layout_marginBottom="22dp"
            android:visibility="gone">

            <!-- Title: Speech Bubbles -->
            <TextView
                android:id="@+id/tvTitleSpeech"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/speech_bubbles"
                android:gravity="center"
                android:textColor="#AB5BFF"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/lobster14"
                android:textSize="20sp" />

            <!--            rcvSticker-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvSpeech"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="11.5dp"
                android:paddingHorizontal="7.5dp"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="5"
                tools:listitem="@layout/item_sticker" />
        </LinearLayout>

        <!--        scvText-->
        <ScrollView
            android:id="@+id/scvText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:paddingTop="15dp"
            android:clipChildren="false"
            tools:visibility="visible"
            android:layout_marginBottom="22dp"
            android:isScrollContainer="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clipChildren="false">

                <!-- Title: Text with Done Button -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-3dp">

                    <!-- Title: Text -->
                    <TextView
                        android:id="@+id/tvTitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text"
                        android:gravity="center"
                        android:textColor="#AB5BFF"
                        android:fontFamily="@font/lobster14"
                        android:textSize="20sp" />

                    <!--                    btnDoneText-->
                    <ImageView
                        android:id="@+id/btnDoneText"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginTop="-2dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_done_background" />
                </FrameLayout>


                <TextView
                    android:id="@+id/tvText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:textColor="#AB5BFF"
                    android:fontFamily="@font/fredoka"
                    android:gravity="start"
                    android:text="@string/text"
                    android:textSize="12sp" />

                <!--            edtText-->
                <EditText
                    android:id="@+id/edtText"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bg_8_solid_white"
                    android:ellipsize="end"
                    android:fontFamily="@font/fredoka"
                    android:hint="@string/hello_world"
                    android:imeOptions="actionDone"
                    android:inputType="text"

                    android:maxLength="30"
                    android:paddingHorizontal="16dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="#99868686"
                    android:textSize="12sp" />



                <TextView
                    android:id="@+id/tvFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:textColor="#AB5BFF"
                    android:fontFamily="@font/fredoka"
                    android:gravity="start"
                    android:text="@string/font"
                    android:textSize="12sp" />

                <!--            rcvFont-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvFont"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="10dp"
                    android:paddingHorizontal="0.5dp"
                    android:clipChildren="false"
                    android:clipToPadding="true"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@+id/titleFont"
                    tools:listitem="@layout/item_font" />

                <TextView
                    android:id="@+id/tvColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="-6dp"
                    android:textColor="#AB5BFF"
                    android:fontFamily="@font/fredoka"
                    android:gravity="start"
                    android:text="@string/color"
                    android:textSize="12sp" />

                <!--            rcvTextColor-->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvTextColor"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginVertical="10dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@+id/titleColor"
                    tools:listitem="@layout/item_text_color" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="16dp" />

            </LinearLayout>
        </ScrollView>

    </FrameLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/lnlBottom"
        app:layout_constraintEnd_toEndOf="@+id/lnlBottom"
        app:layout_constraintStart_toStartOf="@+id/lnlBottom"
        app:layout_constraintTop_toTopOf="@+id/lnlBottom" />

    <!--    lnlBottom-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lnlBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:background="@drawable/bg_bottom"
        android:gravity="center"
        android:layout_marginHorizontal="66dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <!--        btnBackground-->
        <ImageView
            android:id="@+id/btnBackground"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_background_selected" />

        <!--        btnSticker-->
        <ImageView
            android:id="@+id/btnSticker"
            android:layout_width="39dp"
            android:layout_height="39dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnBackground"
            app:layout_constraintEnd_toStartOf="@id/btnSpeech"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_sticker" />

        <!--        btnSpeech-->
        <ImageView
            android:id="@+id/btnSpeech"
            android:layout_width="39dp"
            app:layout_constraintStart_toEndOf="@id/btnSticker"
            app:layout_constraintEnd_toStartOf="@id/btnText"
            android:layout_height="39dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_speech" />

        <!--        btnText-->
        <ImageView
            android:id="@+id/btnText"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_text" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/blue_app"
        app:layout_constraintTop_toBottomOf="@id/flFunction"
        app:layout_constraintBottom_toTopOf="@id/lnlBottom"/>



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <!--    flNativeCollab-->
    <FrameLayout
        android:id="@+id/flNativeCollab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

    </FrameLayout>

<!--    &lt;!&ndash; Custom Input View (1/4 screen height) &ndash;&gt;-->
<!--    <include-->
<!--        android:id="@+id/customInputLayout"-->
<!--        layout="@layout/layout_custom_input"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintHeight_percent="0.25" />-->

</androidx.constraintlayout.widget.ConstraintLayout>
