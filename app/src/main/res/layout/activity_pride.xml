<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#EEF0FB">

    <!-- Action Bar -->
    <FrameLayout
        android:id="@+id/layoutActionBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
        <include
            android:id="@+id/actionBar"
            layout="@layout/layout_actionbar" />
    </FrameLayout>

    <!-- Header: Title + Dots + Counter + Label -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/layoutActionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">



        <!-- Step dots -->
        <LinearLayout
            android:id="@+id/layoutDots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <View android:id="@+id/dot1" android:layout_width="16dp" android:layout_height="16dp" android:background="@drawable/bg_pride_step_active" />
            <View android:layout_width="16dp" android:layout_height="1.5dp" android:background="#000000" android:layout_marginHorizontal="4dp" />
            <View android:id="@+id/dot2" android:layout_width="16dp" android:layout_height="16dp" android:background="@drawable/bg_pride_step_inactive" />
            <View android:layout_width="16dp" android:layout_height="1.5dp" android:background="#000000" android:layout_marginHorizontal="4dp" />
            <View android:id="@+id/dot3" android:layout_width="16dp" android:layout_height="16dp" android:background="@drawable/bg_pride_step_inactive" />
            <View android:layout_width="16dp" android:layout_height="1.5dp" android:background="#000000" android:layout_marginHorizontal="4dp" />
            <View android:id="@+id/dot4" android:layout_width="16dp" android:layout_height="16dp" android:background="@drawable/bg_pride_step_inactive" />
            <View android:layout_width="16dp" android:layout_height="1.5dp" android:background="#000000" android:layout_marginHorizontal="4dp" />
            <View android:id="@+id/dot5" android:layout_width="16dp" android:layout_height="16dp" android:background="@drawable/bg_pride_step_inactive" />
            <View android:layout_width="16dp" android:layout_height="1.5dp" android:background="#000000" android:layout_marginHorizontal="4dp" />
            <View android:id="@+id/dot6" android:layout_width="16dp" android:layout_height="16dp" android:background="@drawable/bg_pride_step_inactive" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvStepCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lobster14"
            android:textSize="16sp"
            android:textColor="#4A90E2"
            android:layout_marginTop="14dp"
            android:text="1/6" />

        <TextView
            android:id="@+id/tvStepLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lobster14"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="#4A90E2"
            android:text="@string/pride_choose_image" />

    </LinearLayout>

    <!-- Step containers -->
    <FrameLayout
        android:id="@+id/stepContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"
        app:layout_constraintBottom_toTopOf="@id/layoutBottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ====== STEP 1: Choose Image ====== -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/step1Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="visible"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp">

                <!-- Upload box -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/uploadBox"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="58dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/bg_pride_upload_box"
                    android:clipToOutline="true">

                    <!-- Empty state -->
                    <LinearLayout
                        android:id="@+id/emptyUploadState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_upload"
                            app:tint="#4A90E2" />

                        <View
                            android:layout_width="60dp"
                            android:layout_height="2dp"
                            android:background="#4A90E2"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lobster14"
                            android:textSize="15sp"
                            android:textColor="#4A90E2"
                            android:layout_marginTop="10dp"
                            android:text="@string/pride_choose_image_hint" />
                    </LinearLayout>

                    <!-- Loaded state -->
                    <LinearLayout
                        android:id="@+id/loadedImageState"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <ImageView
                            android:id="@+id/imgSelectedPreview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop" />
                    </LinearLayout>

                    <!-- X button (loaded state) -->
                    <ImageView
                        android:id="@+id/btnClearImage"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="13dp"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_close_step2"
                        android:padding="4dp"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- Change image button (visible when loaded) -->
                <LinearLayout
                    android:id="@+id/btnChangeImage"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:paddingHorizontal="24dp"
                    android:gravity="center"
                    tools:visibility="gone"
                    android:background="@drawable/bg_pride_upload_box"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lobster14"
                        android:textSize="16sp"
                        android:textColor="#4A90E2"
                        android:text="@string/pride_click_to_select_different" />
                </LinearLayout>

                <!-- Error state -->
                <LinearLayout
                    android:id="@+id/errorNoImage"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bg_pride_error"
                    android:gravity="center"
                    android:layout_marginHorizontal="50dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_warning"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lobster14"
                        android:textSize="16sp"
                        android:textColor="#F44336"
                        android:text="@string/pride_no_image_uploaded" />
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- ====== STEP 2: Crop Image ====== -->
        <LinearLayout
            android:id="@+id/step2Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            tools:visibility="visible"
            android:visibility="gone">

            <!-- Reset / Center buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="11dp">

                <LinearLayout
                    android:id="@+id/btnCropReset"
                    android:layout_width="62dp"
                    android:layout_height="23dp"
                    android:background="@drawable/bg_btn_pride_continue"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginEnd="8dp">
                    <ImageView
                        android:layout_width="11dp"
                        android:layout_height="11dp"
                        android:src="@drawable/ic_reset_overlay"
                        app:tint="@color/white"
                        android:layout_marginEnd="4dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lobster14"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:text="@string/reset" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnCropCenter"
                    android:layout_width="62dp"
                    android:layout_height="23dp"
                    android:background="@drawable/bg_btn_pride_continue"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_center"
                        app:tint="@color/white"
                        android:layout_marginEnd="4dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lobster14"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:text="@string/pride_center" />
                </LinearLayout>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.pfp.pride.core.custom.drawview.CropView
                    android:id="@+id/cropView"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="68dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@drawable/bg_pride_crop_view"
                    android:clipToOutline="true"
                    android:scaleType="fitCenter" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <!-- ====== STEP 3: Choose Pride Flags ====== -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/step3Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="gone"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="12dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="13sp"
                    android:textColor="#949494"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:paddingBottom="8dp"
                    android:text="@string/pride_select_up_to_4" />

                <!-- Selected flags bar -->
                <LinearLayout
                    android:id="@+id/selectedFlagsBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_pride_selected_flags_bar"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lobster14"
                        android:textSize="13sp"
                        android:textColor="#555555"
                        android:text="@string/pride_selected_flags" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvSelectedChips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:nestedScrollingEnabled="false" />

                </LinearLayout>

                <!-- My Custom section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lobster14"
                    android:textSize="16sp"
                    android:textColor="#222222"
                    android:text="@string/pride_my_custom"
                    android:layout_marginBottom="8dp" />


                <LinearLayout
                    android:id="@+id/btnAddCustomFlag"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/bg_pride_custom_add"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/plus"
                        android:textSize="28sp"
                        android:textColor="#AAAAAA"
                        android:fontFamily="@font/lobster14" />

                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCustomFlags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:nestedScrollingEnabled="false" />

                <!-- Pride's Flag section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lobster14"
                    android:textSize="16sp"
                    android:textColor="#222222"
                    android:text="@string/pride_flags_section"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvFlags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- ====== STEP 4: Choose Layout Style ====== -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/step4Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="gone"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lobster14"
                    android:textSize="12sp"
                    android:textColor="#949494"
                    android:gravity="center"
                    android:paddingBottom="16dp"
                    android:paddingHorizontal="16dp"
                    android:text="@string/pride_layout_subtitle" />

                <!-- Circle option -->
                <LinearLayout
                    android:id="@+id/optionCircle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_pride_layout_option_selected"
                    android:padding="14dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/ic_circle_step4"
                        android:scaleType="fitCenter" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lobster14"
                            android:textSize="16sp"
                            android:textColor="#222222"
                            android:text="@string/pride_layout_circle" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="12sp"
                            android:textColor="#8B8B8B"
                            android:layout_marginTop="2dp"
                            android:text="@string/pride_layout_circle_desc" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Square option -->
                <LinearLayout
                    android:id="@+id/optionSquare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_pride_layout_option"
                    android:padding="14dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/ic_square_step4"
                        android:scaleType="fitCenter" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lobster14"
                            android:textSize="16sp"
                            android:textColor="#222222"
                            android:text="@string/pride_layout_square" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="12sp"
                            android:textColor="#8B8B8B"
                            android:layout_marginTop="2dp"
                            android:text="@string/pride_layout_square_desc" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Background option -->
                <LinearLayout
                    android:id="@+id/optionBackground"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_pride_layout_option"
                    android:padding="14dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/ic_background_step4"
                        android:scaleType="fitCenter" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lobster14"
                            android:textSize="16sp"
                            android:textColor="#222222"
                            android:text="@string/pride_layout_background" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="12sp"
                            android:textColor="#8B8B8B"
                            android:layout_marginTop="2dp"
                            android:text="@string/pride_layout_background_desc" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- ====== STEP 5: Choose Design Style ====== -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/step5Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:visibility="gone"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:clipToPadding="false"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="12sp"
                    android:textColor="#949494"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    android:text="@string/pride_design_subtitle" />

                <!-- Preview -->
                <com.pfp.pride.core.custom.drawview.PreviewView
                    android:id="@+id/imgPreview"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="20dp" />

                <!-- Image Zoom -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lobster14"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:text="@string/pride_image_zoom"
                    android:layout_marginBottom="10dp" />

                <SeekBar
                    android:id="@+id/seekImageZoom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:layout_marginStart="-17dp"

                    android:progress="50"
                    android:progressDrawable="@drawable/bg_seekbar_progress"
                    android:thumb="@drawable/bg_seekbar_thumb"
                    android:thumbOffset="0dp"
                    android:splitTrack="false"
                    android:layout_marginBottom="12dp" />

                <!-- Ring Scale -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lobster14"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:text="@string/pride_ring_scale"
                    android:layout_marginBottom="10dp" />

                <SeekBar
                    android:id="@+id/seekRingScale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="30"
                    android:progressDrawable="@drawable/bg_seekbar_progress"
                    android:thumb="@drawable/bg_seekbar_thumb"
                    android:thumbOffset="0dp"
                    android:splitTrack="false"
                    android:layout_marginStart="-17dp"
                    android:layout_marginBottom="16dp" />

                <!-- Reset buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:id="@+id/btnDefaultZoom"
                        android:layout_width="0dp"
                        android:layout_height="41dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_btn_step5"
                        android:gravity="center"
                        android:layout_marginEnd="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lobster14"
                            android:textSize="12sp"
                            android:textColor="#AB5BFF"
                            android:gravity="center"
                            android:text="@string/pride_default_zoom" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnDefaultRing"
                        android:layout_width="0dp"
                        android:layout_height="41dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_btn_step5"
                        android:gravity="center"
                        android:layout_marginHorizontal="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lobster14"
                            android:textSize="12sp"
                            android:textColor="#AB5BFF"
                            android:gravity="center"
                            android:text="@string/pride_default_ring" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnCenterImage"
                        android:layout_width="0dp"
                        android:layout_height="41dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_btn_step5"
                        android:gravity="center"
                        android:layout_marginStart="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lobster14"
                            android:textSize="12sp"
                            android:textColor="#AB5BFF"
                            android:gravity="center"
                            android:text="@string/pride_center_image" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Flag Mode toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical">



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lobster14"
                        android:textSize="12sp"
                        android:textColor="#222222"
                        android:layout_marginStart="0dp"
                        android:text="@string/pride_flag_mode_ring"
                        android:layout_marginBottom="10dp"
                        />
                    <ImageView
                        android:id="@+id/switchFlagMode"
                        android:layout_width="52dp"
                        android:layout_height="26dp"
                        android:src="@drawable/ic_sw_on"
                        android:clickable="true"
                        android:focusable="true" />
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- ====== STEP 6: Result ====== -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/step6Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lobster14"
                    android:textSize="13sp"
                    android:textColor="#888888"
                    android:gravity="center"
                    android:paddingBottom="12dp"
                    android:text="@string/pride_result_subtitle" />

                <ImageView
                    android:id="@+id/imgResult"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="20dp" />

                <!-- Download + Create Another -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:id="@+id/btnDownload"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_btn_pride_continue"
                        android:gravity="center"
                        android:layout_marginEnd="8dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lobster14"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:text="@string/download" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnCreateAnother"
                        android:layout_width="0dp"
                        android:layout_height="46dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_btn_pride_outline"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/lobster14"
                            android:textSize="15sp"
                            android:textColor="#D93F8B"
                            android:text="@string/pride_create_another" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btnMyWork"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:background="@drawable/bg_btn_pride_continue"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lobster14"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:text="@string/pride_my_work" />
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </FrameLayout>

    <!-- ====== Bottom Navigation ====== -->
    <LinearLayout
        android:id="@+id/layoutBottomNav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="25dp"
        android:paddingEnd="22dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/btnPrevious"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lobster14"
            android:textSize="14sp"
            android:textColor="#B3B3B3"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/arrow_previous"
            android:gravity="start|center_vertical"
            android:text="@string/pride_previous" />

        <TextView
            android:id="@+id/btnStartOver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lobster14"
            android:textSize="14sp"
            android:textColor="#B3B3B3"
            android:gravity="start"
            android:drawableStart="@drawable/ic_start_over"
            android:drawablePadding="6.5dp"
            android:drawableTint="#B3B3B3"
            android:text="@string/pride_start_over" />

        <LinearLayout
            android:id="@+id/btnContinue"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_pride_continue"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lobster14"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="start"
                android:textColor="@color/white"
                android:drawableEnd="@drawable/arrow_continue"
                android:text="@string/pride_continue" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
