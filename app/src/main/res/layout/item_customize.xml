<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_constraintDimensionRatio="1:1"
    android:layout_margin="1.5dp">



    <!--        vFocus-->
    <View
        android:id="@+id/vFocus"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <FrameLayout
        android:id="@+id/cardLayerItem"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        tools:background="@drawable/layer_slt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--                    imvImage-->
        <ImageView
            android:id="@+id/imvImage"
            android:layout_width="match_parent"
            android:layout_marginTop="2dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="4.7dp"
            android:layout_marginBottom="6.5dp"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            tools:src="@color/red_BA" />

        <!--            btnNone-->
        <ImageView
            android:id="@+id/btnNone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:translationY="-2dp"

            android:layout_margin="7dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_none"
            android:visibility="gone"
            app:tint="@color/app" />

        <!--            btnRandom-->
        <ImageView
            android:id="@+id/btnRandom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_margin="7dp"
            android:focusable="true"
            android:translationY="-2dp"
            app:tint="@color/app"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_random_layer"
            android:visibility="gone" />


    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>