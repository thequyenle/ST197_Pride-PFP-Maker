<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/bg_pride_selected_chip"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:layout_marginEnd="6dp">

    <View
        android:id="@+id/dotColor"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@drawable/bg_pride_step_active"
        android:layout_marginEnd="4dp" />

    <TextView
        android:id="@+id/tvChipName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lobster14"
        android:textSize="12sp"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/btnRemoveChip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ã—"
        android:textSize="16sp"
        android:textColor="#888888"
        android:layout_marginStart="4dp"
        android:paddingBottom="2dp" />

</LinearLayout>
